<h1>Eat-Da-Burger</h1>

<h2>Burger Menu</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Devour!</button>
        </form>

      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
      
        {{this.burger_name}}

      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="new_burger">Burger Name:</label>
    <input type="text" id="new_burger" name="burger_name">
  </div>

  <div class="form-group">
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
  </div>

  <button type="submit">Add Burger</button>
</form>